{
  "name": "base-bot-handler",
  "version": "2.0.0",
  "description": "A reusable Discord bot handler with slash commands, message commands, component handlers, and MongoDB integration - TypeScript Edition",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch index.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "discord",
    "discord-bot",
    "discord.js",
    "bot-handler",
    "slash-commands",
    "message-commands",
    "mongodb",
    "mongoose",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "discord.js": "^14.22.1",
    "dotenv": "^17.2.3",
    "mongoose": "^8.19.0",
    "node-cron": "^4.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
